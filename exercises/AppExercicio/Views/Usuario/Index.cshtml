@model AppExercicio.Models.Usuario;

@{
    ViewData["Title"] = "Usuário";
}

<h1 class="mb-4">Cadastro de Usuário</h1>

@using (Html.BeginForm("Resultado", "Usuario", FormMethod.Get, new { @style="width: 30rem;" })) {
    <div class="d-flex justify-content-between">
        <div>
            <div class="form-group">
                @Html.LabelFor(m => m.Id)
                <input type="number" class="form-control" name="@Html.NameFor(m => m.Id)" required>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Nome)
                <input type="text" class="form-control" name="@Html.NameFor(m => m.Nome)" required>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Observacao)
                <input type="text" class="form-control" name="@Html.NameFor(m => m.Observacao)" required>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.DataDeNascimento)
                <input type="date" class="form-control" name="@Html.NameFor(m => m.DataDeNascimento)" required>
            </div>
        </div>
        <div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                <input type="email" class="form-control" name="@Html.NameFor(m => m.Email)" required>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Login)
                <input type="text" class="form-control" name="@Html.NameFor(m => m.Login)" required>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Senha)
                <input type="password" class="form-control" name="@Html.NameFor(m => m.Senha)" required>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-between" style="max-width: 40rem;">
        <button onclick="location.href='@Url.Action("Index", "Home")'" class="btn btn-secondary">Cancelar</button>
        <button type="submit" class="btn btn-primary">Cadastrar</button>
    </div>
}
